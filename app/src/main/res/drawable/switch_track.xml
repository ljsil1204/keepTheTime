<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">

        <shape android:shape="rectangle">

            <size
                android:width="50dp"
                android:height="18dp"/>

            <solid
                android:color="@color/basic_50"/>

            <stroke
                android:color="@color/white"
                android:width="3dp"/>

            <corners
                android:radius="15dp"/>

        </shape>

    </item>

    <item android:state_checked="true">

        <shape android:shape="rectangle">

            <size
                android:width="50dp"
                android:height="18dp"/>

            <solid
                android:color="@color/primary"/>

            <stroke
                android:color="@color/white"
                android:width="3dp"/>

            <corners
                android:radius="15dp"/>

        </shape>

    </item>


</selector>
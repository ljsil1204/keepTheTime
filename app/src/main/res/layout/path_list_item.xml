<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소요시간"
            android:textSize="20sp"
            android:textColor="@color/basic_900"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분"
            android:textSize="14sp"
            android:textColor="@color/basic_400"/>

        <TextView
            android:id="@+id/txtTotalDistance"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.4km"
            android:textSize="14sp"
            android:textColor="@color/basic_400"/>

        <TextView
            android:id="@+id/txtPayment"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금액"
            android:textSize="14sp"
            android:textColor="@color/basic_400"/>

    </LinearLayout>

    <TextView
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/basic_400"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTrafficCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="5호선"
            android:textSize="15sp"
            android:textColor="@color/basic_900"/>

        <TextView
            android:id="@+id/txtStartName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="승차 정류장이름"
            android:textSize="15sp"
            android:textColor="@color/basic_400"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtGetOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="하차"
            android:textSize="15sp"
            android:textColor="@color/basic_400"/>

        <TextView
            android:id="@+id/txtEndName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하차 정류장이름"
            android:textSize="15sp"
            android:textColor="@color/basic_400"/>

    </LinearLayout>

    <TextView
        android:layout_marginVertical="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_DDD"/>

</LinearLayout>
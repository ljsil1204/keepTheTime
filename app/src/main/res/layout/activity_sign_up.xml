<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        tools:context=".SignUpActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="아이디 (이메일)"
                android:theme="@style/EditTextTheme"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEmailCheck"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중복 검사"
                android:paddingHorizontal="20dp"
                android:theme="@style/MyButtonBasicLightTheme"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtEmailCheck"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일 중복 검사를 진행해주세요."
            android:textColor="@color/basic_400"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="비밀번호"
            android:theme="@style/EditTextTheme"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtNickname"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="닉네임 (자유입력)"
                android:theme="@style/EditTextTheme"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNicknameCheck"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중복 검사"
                android:paddingHorizontal="20dp"
                android:theme="@style/MyButtonBasicLightTheme"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtNicknameCheck"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임 중복 검사를 진행해주세요."
            android:textColor="@color/basic_400"
            android:textSize="15sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSingUp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:theme="@style/MyButtonBasicTheme"/>

    </LinearLayout>
</layout>
